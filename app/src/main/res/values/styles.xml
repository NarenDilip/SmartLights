<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppCompatAlertDialogStyle"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/maroon</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:windowBackground">@drawable/activity_boxs</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mont_regular</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/grey</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@drawable/activity_boxs</item>
        <item name="android:fontFamily">@font/mont_regular</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PostiveButtonStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/mont_regular</item>
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PostiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/mont_regular</item>
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>