<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/maroon">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:gravity="left"
            android:textSize="28sp"
            android:text="Log In"
            android:fontFamily="@font/mont_medium"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/email_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:text="Email"
            android:fontFamily="@font/mont_regular"
            app:layout_constraintTop_toBottomOf="@+id/login_header"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:gravity="left|center_vertical"
            android:inputType="textEmailAddress"
            android:background="@drawable/activity_boxs"
            android:textSize="14sp"
            android:hint="Email"
            android:text="ramkumar@schnellenergy.com"
            android:fontFamily="@font/mont_regular"
            app:layout_constraintTop_toBottomOf="@+id/email_head"/>

        <TextView
            android:id="@+id/pass_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:text="Password"
            android:fontFamily="@font/mont_regular"
            app:layout_constraintTop_toBottomOf="@+id/email"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:inputType="textPassword|numberPassword"
            android:background="@drawable/activity_boxs"
            android:textSize="14sp"
            android:hint="Password"
            android:text="schnell"
            android:fontFamily="@font/mont_regular"
            app:layout_constraintTop_toBottomOf="@+id/pass_head"/>

        <TextView
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:background="@drawable/activity_red_boxs"
            android:textSize="18sp"
            android:text="Log In"
            android:fontFamily="@font/mont_regular"
            app:layout_constraintTop_toBottomOf="@+id/password"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>