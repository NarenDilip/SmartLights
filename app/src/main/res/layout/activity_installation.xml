<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/devicetype"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/maroon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/login_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/mont_medium"
            android:gravity="center"
            android:text="Device Installation"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/devicetype"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/region"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:focusable="false"
                android:fontFamily="@font/mont_regular"
                android:gravity="center"
                android:text="Dummy"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/zone"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/region"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toStartOf="@+id/ward"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:fontFamily="@font/mont_regular"
                android:gravity="center"
                android:text="Please Select Zone"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ward"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toEndOf="@+id/zone"
                app:layout_constraintTop_toBottomOf="@+id/region"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:fontFamily="@font/mont_regular"
                android:gravity="center"
                android:text="Please Select Ward"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ccms_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:clickable="false"
                app:layout_constraintTop_toBottomOf="@+id/ward"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:focusable="false"
                android:fontFamily="@font/mont_regular"
                android:gravity="center"
                android:text="Please Select CCMS"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:layout_editor_absoluteY="130dp" />

            <LinearLayout
                android:id="@+id/viewlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ccms_id" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewlayer">

                <EditText
                    android:id="@+id/editView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/mont_regular"
                    android:hint="Add Device"
                    android:inputType="textCapCharacters"
                    android:paddingLeft="1dp"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <Button
                    android:id="@+id/devscan"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/ic_baseline_qr_code_scanner_24_bl"
                    android:text=""
                    app:layout_constraintBottom_toBottomOf="@+id/editView"
                    app:layout_constraintEnd_toStartOf="@+id/imgViewAdd"
                    app:layout_constraintLeft_toRightOf="@+id/imgViewAdd"
                    app:layout_constraintTop_toTopOf="@+id/editView" />

                <ImageView
                    android:id="@+id/imgViewAdd"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/ic_baseline_add_24"
                    android:onClick="addValue"
                    app:layout_constraintBottom_toBottomOf="@+id/editView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editView" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/mainlay"></ListView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/viewwe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/listview">

                <EditText
                    android:id="@+id/latt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:clickable="false"
                    android:textColorHint="@color/black"
                    android:editable="false"
                    android:ems="10"
                    app:layout_constraintTop_toTopOf="parent"
                    android:focusable="false"
                    android:fontFamily="@font/mont_regular"
                    android:gravity="center_vertical"
                    android:hint="Lattitude"
                    android:inputType="textPersonName"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toStartOf="@+id/longg"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/longg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:editable="false"
                    android:textColorHint="@color/black"
                    android:focusable="false"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/mont_regular"
                    app:layout_constraintStart_toEndOf="@+id/latt"
                    android:gravity="center_vertical"
                    android:hint="Longitude"
                    android:inputType="textPersonName"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <fragment
                android:id="@+id/mapView"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintTop_toBottomOf="@+id/viewwe" />

            <TextView
                android:id="@+id/submitbtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/mont_medium"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:text="Submit"
                android:background="@drawable/activity_boxs_topright"
                app:layout_constraintTop_toBottomOf="@+id/mapView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>